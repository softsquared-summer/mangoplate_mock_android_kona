<?xml version="1.0" encoding="utf-8"?>
<com.amar.library.ui.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:stickyHeader="@id/eatdeal_topbar"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eatdeal_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eatdeal_filter_const"
                android:layout_width="80dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/eatdeal_filter_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:src="@drawable/eatdeal_filter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/eatdeal_filter_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내 주변"
                    android:textColor="@color/orange_red"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toStartOf="@id/eatdeal_filter_btn"
                    app:layout_constraintTop_toTopOf="@id/eatdeal_filter_btn"
                    app:layout_constraintBottom_toBottomOf="@id/eatdeal_filter_btn"/>
                <ImageView
                    android:id="@+id/eatdeal_filter_arrow"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/eatdeal_filter_arrow"
                    app:layout_constraintTop_toTopOf="@id/eatdeal_filter_btn"
                    app:layout_constraintBottom_toBottomOf="@id/eatdeal_filter_btn"
                    app:layout_constraintStart_toEndOf="@id/eatdeal_filter_textview"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/eatdeal_refresh_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/eatdeal_refresh_btn"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                android:background="?attr/selectableItemBackground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eatdeal_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
    </LinearLayout>
</com.amar.library.ui.StickyScrollView>