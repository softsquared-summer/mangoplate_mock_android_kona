<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/search_restaurant_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/search_restaurant_name"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_restaurant_img"
        app:layout_constraintStart_toStartOf="@id/search_restaurant_img"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:text="1. 스시쿤"/>
    <TextView
        android:id="@+id/search_restaurant_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_restaurant_name"
        app:layout_constraintStart_toStartOf="@id/search_restaurant_name"
        android:text="성남시 - 2.01km"
        android:textSize="12sp"/>
    <ImageView
        android:id="@+id/eye"
        android:layout_width="12dp"
        android:layout_height="14dp"
        app:layout_constraintTop_toBottomOf="@id/search_restaurant_distance"
        app:layout_constraintStart_toStartOf="@id/search_restaurant_distance"
        android:src="@drawable/eye"/>
    <TextView
        android:id="@+id/search_restaurant_views"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/eye"
        app:layout_constraintTop_toTopOf="@id/eye"
        app:layout_constraintBottom_toBottomOf="@id/eye"
        android:textSize="12sp"
        android:text="192,601"/>
    <ImageView
        android:id="@+id/pencil"
        android:layout_width="12dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toEndOf="@id/search_restaurant_views"
        app:layout_constraintTop_toTopOf="@id/eye"
        app:layout_constraintBottom_toBottomOf="@id/eye"
        android:src="@drawable/update"/>
    <TextView
        android:id="@+id/search_restaurant_modify"
        android:layout_width="23dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/pencil"
        app:layout_constraintTop_toTopOf="@id/pencil"
        app:layout_constraintBottom_toBottomOf="@id/pencil"
        android:text="89"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/search_restaurant_rate"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOrange"
        app:layout_constraintTop_toBottomOf="@id/search_restaurant_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/search_restaurant_img"
        android:gravity="end"
        android:text="4.5"
        android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>