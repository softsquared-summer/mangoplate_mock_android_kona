<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.softsquared.template.src.main.restaurant_detail.RestaurantDetailActivity"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/restaurant_detail_top_bar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurant_detail_down_arrow_const"
            android:layout_width="45dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="7dp">
            <ImageView
                android:id="@+id/restaurant_detail_down_arrow"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/res_detail_down_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurant_detail_link_const"
            android:layout_width="45dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/restaurant_detail_link"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/res_detail_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/restaurant_detail_camera_const"
            android:layout_width="45dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toStartOf="@id/restaurant_detail_link_const"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/restaurant_detail_camera"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/res_detail_camera"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.amar.library.ui.StickyScrollView
        android:id="@+id/restaurant_detail_scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_detail_top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:stickyHeader="@id/restaurant_detail_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/restaurant_detail_top_photo_recyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:id="@+id/restaurant_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스시쿤"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_top_photo_recyclerView"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"/>
                <ImageView
                    android:id="@+id/restaurant_detail_views_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintStart_toStartOf="@id/restaurant_detail_name"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/eye"/>
                <TextView
                    android:id="@+id/restaurant_detail_views_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/restaurant_detail_views_img"
                    app:layout_constraintTop_toTopOf="@id/restaurant_detail_views_img"
                    app:layout_constraintBottom_toBottomOf="@id/restaurant_detail_views_img"
                    android:layout_marginStart="5dp"
                    android:textSize="11sp"
                    android:text="193,286"/>
                <ImageView
                    android:id="@+id/restaurant_detail_star_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintStart_toEndOf="@id/restaurant_detail_views_textView"
                    app:layout_constraintTop_toTopOf="@id/restaurant_detail_views_img"
                    app:layout_constraintBottom_toBottomOf="@id/restaurant_detail_views_img"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/eye"/>
                <TextView
                    android:id="@+id/restaurant_detail_star_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/restaurant_detail_star_img"
                    app:layout_constraintTop_toTopOf="@id/restaurant_detail_views_textView"
                    app:layout_constraintBottom_toBottomOf="@id/restaurant_detail_views_textView"
                    android:layout_marginStart="5dp"
                    android:textSize="11sp"
                    android:text="3,306"/>
                <ImageView
                    android:id="@+id/restaurant_detail_pencil_img"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintStart_toEndOf="@id/restaurant_detail_star_textView"
                    app:layout_constraintTop_toTopOf="@id/restaurant_detail_views_img"
                    app:layout_constraintBottom_toBottomOf="@id/restaurant_detail_views_img"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/eye"/>
                <TextView
                    android:id="@+id/restaurant_detail_modify_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/restaurant_detail_pencil_img"
                    app:layout_constraintTop_toTopOf="@id/restaurant_detail_views_textView"
                    app:layout_constraintBottom_toBottomOf="@id/restaurant_detail_views_textView"
                    android:layout_marginStart="5dp"
                    android:textSize="11sp"
                    android:text="89"/>
                <TextView
                    android:id="@+id/restaurant_detail_rate_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/restaurant_detail_rate_info"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_top_photo_recyclerView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="4.5"
                    android:textSize="40sp"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/orange"/>
                <ImageView
                    android:id="@+id/restaurant_detail_rate_info"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/restaurant_detail_rate_textView"
                    android:src="@drawable/info"
                    android:layout_marginEnd="15dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <GridLayout
                android:id="@+id/restaurant_detail_header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:rowCount="1"
                android:columnCount="4"
                android:layout_weight="4">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_favorite_bigBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <ImageView
                        android:id="@+id/restaurant_detail_favorite_bigBtn_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/res_detail_favorite"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_gone_bigBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <ImageView
                        android:id="@+id/restaurant_detail_gone_bigBtn_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/res_detail_gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_writeReview_bigBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <ImageView
                        android:id="@+id/restaurant_detail_writeReview_bigBtn_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/res_detail_review"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_writeReview_myList"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <ImageView
                        android:id="@+id/restaurant_detail_writeReview_myList_img"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:src="@drawable/res_detail_mylist"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:backgroundTint="@color/colorHexGray"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/restaurant_detail_location_const"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <TextView
                    android:id="@+id/restaurant_detail_location_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기도 성남시 분당구 성남대로 381 폴라리스1차 104호"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/restaurant_detail_location_jibun_textView"/>
                <ImageView
                    android:id="@+id/restaurant_detail_location_jibun_img"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="@id/restaurant_detail_location_textView"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_location_textView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/res_detail_jibun"/>
                <TextView
                    android:id="@+id/restaurant_detail_location_jibun_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="경기도 성남시 분당구 성남대로 381 폴라리스1차 104호"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toEndOf="@+id/restaurant_detail_location_jibun_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_location_textView"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/restaurant_detail_location_map"
                android:layout_width="match_parent"
                android:layout_height="110dp"/>
            <GridLayout
                android:id="@+id/restaurant_detail_location_tapbar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:rowCount="1"
                android:columnCount="4"
                android:layout_weight="4">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_location_pathfind_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/restaurant_detail_location_pathfind_const"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:id="@+id/restaurant_detail_location_pathfind_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/res_detail_pathfind"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/restaurant_detail_location_pathfind_img"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="길 찾기"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_location_navigation_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/restaurant_detail_location_navigation_const"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:id="@+id/restaurant_detail_location_navigation_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/res_detail_navigation"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/restaurant_detail_location_navigation_img"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="네비게이션"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_location_taxi_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/restaurant_detail_location_taxi_const"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:id="@+id/restaurant_detail_location_taxi_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/res_detail_taxi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/restaurant_detail_location_taxi_img"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="택시부르기"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_location_copyurl_grid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_row="0">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/restaurant_detail_location_copyurl_const"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                        <ImageView
                            android:id="@+id/restaurant_detail_location_copyurl_img"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/res_detail_copy_url"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/restaurant_detail_location_copyurl_img"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:text="주소 복사"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:backgroundTint="@color/colorHexGray"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/restaurant_detail_call_const"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="?attr/selectableItemBackground">
                    <ImageView
                        android:id="@+id/restaurant_detail_call_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/res_detail_getcall"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:backgroundTint="@color/colorHexGray"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/restaurant_detail_resinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/restaurant_detail_resinfo_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="편의정보"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/restaurant_detail_resinfo_update_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="20dp"
                    android:text="업데이트 날짜 : 2018-02-02"
                    android:textColor="#DBDBDB"/>
                <TextView
                    android:id="@+id/restaurant_detail_resinfo_opentime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/restaurant_detail_resinfo_textview"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_resinfo_textview"
                    android:text="영업시간"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/restaurant_detail_resinfo_breaktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/restaurant_detail_resinfo_textview"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_resinfo_opentime"
                    android:text="쉬는시간"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/restaurant_detail_resinfo_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/restaurant_detail_resinfo_textview"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_resinfo_breaktime"
                    android:text="가격"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/gray"/>
                <TextView
                    android:id="@+id/restaurant_detail_resinfo_opentime_contents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/restaurant_detail_resinfo_update_date"
                    app:layout_constraintTop_toBottomOf="@id/restaurant_detail_resinfo_update_date"
